{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "jsx": "preserve",
      "strict": true,
      "noImplicitAny": false,
      "useUnknownInCatchVariables": false,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "skipLibCheck": false,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "types": ["node"]
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "vite.config.*", "env.d.ts"],
    "exclude": ["node_modules", "dist"],
    "vueCompilerOptions": {
      "plugins": ["@vue/language-plugin-pug"]
    }
  }